<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@color/lightpurple"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/displayEdittext"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:layout_marginTop="60dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:ems="10"
        android:gravity="center|right"
        android:inputType="number"
        android:text="@string/_0"
        android:textSize="40dp"
        android:paddingEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="393dp"
        android:layout_height="233dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/displayEdittext">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="6dp">

                <Button
                    android:id="@+id/cal_C"
                    android:layout_height="@dimen/maximum"
                    android:layout_marginRight="@dimen/standard"
                    android:layout_weight="1"
                    android:background="@color/orange"
                    android:text="@string/c"
                    android:onClick="clear"
                    android:textColor="@color/white">

                </Button>

                <Button
                    android:id="@+id/cal_percent"
                    android:layout_height="@dimen/maximum"
                    android:layout_marginRight="@dimen/standard"
                    android:layout_weight="1"
                    android:background="@color/orange"
                    android:text="@string/percent"
                    android:onClick="percentage"
                    android:textColor="@color/white">

                </Button>

                <Button
                    android:id="@+id/cal_add_minus"
                    android:layout_height="@dimen/maximum"
                    android:layout_marginRight="@dimen/standard"
                    android:layout_weight="1"
                    android:background="@color/orange"
                    android:text="@string/plus_minus"
                    android:onClick="numberClicked"
                    android:textColor="@color/white">

                </Button>

                <Button
                    android:id="@+id/cal_divide"
                    android:layout_height="@dimen/maximum"
                    android:layout_weight="1"
                    android:background="@color/orange"
                    android:text="@string/divide"
                    android:onClick="signOperation"
                    android:textColor="@color/white">

                </Button>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="6dp"
                android:paddingTop="10dp">

                <Button
                    android:id="@+id/cal_seven"
                    android:layout_height="@dimen/maximum"
                    android:layout_marginRight="@dimen/standard"
                    android:layout_weight="1"
                    android:background="@color/purple"
                    android:text="@string/seven"
                    android:onClick="numberClicked"
                    android:textColor="@color/white">
                </Button>

                <Button
                    android:id="@+id/cal_eight"
                    android:layout_height="@dimen/maximum"
                    android:layout_marginRight="@dimen/standard"
                    android:layout_weight="1"
                    android:background="@color/purple"
                    android:text="@string/eight"
                    android:onClick="numberClicked"
                    android:textColor="@color/white">

                </Button>

                <Button
                    android:id="@+id/cal_nine"
                    android:layout_height="@dimen/maximum"
                    android:layout_marginRight="@dimen/standard"
                    android:layout_weight="1"
                    android:background="@color/purple"
                    android:text="@string/nine"
                    android:onClick="numberClicked"
                    android:textColor="@color/white">

                </Button>

                <Button
                    android:id="@+id/cal_multiply"
                    android:layout_height="@dimen/maximum"
                    android:layout_weight="1"
                    android:background="@color/orange"
                    android:text="@string/multiply"
                    android:onClick="signOperation"
                    android:textColor="@color/white">

                </Button>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="10dp">

                <Button
                    android:id="@+id/cal_four"
                    android:layout_height="@dimen/maximum"
                    android:layout_marginRight="@dimen/standard"
                    android:layout_weight="1"
                    android:background="@color/purple"
                    android:text="@string/four"
                    android:onClick="numberClicked"
                    android:textColor="@color/white">

                </Button>


                <Button
                    android:id="@+id/cal_five"
                    android:layout_height="@dimen/maximum"
                    android:layout_marginRight="@dimen/standard"
                    android:layout_weight="1"
                    android:background="@color/purple"
                    android:text="@string/five"
                    android:onClick="numberClicked"
                    android:textColor="@color/white">

                </Button>

                <Button
                    android:id="@+id/cal_six"
                    android:layout_height="@dimen/maximum"
                    android:layout_marginRight="@dimen/standard"
                    android:layout_weight="1"
                    android:background="@color/purple"
                    android:text="@string/six"
                    android:onClick="numberClicked"
                    android:textColor="@color/white">

                </Button>


                <Button
                    android:id="@+id/cal_minus"
                    android:layout_height="@dimen/maximum"
                    android:layout_weight="1"
                    android:background="@color/orange"
                    android:text="@string/dot"
                    android:onClick="signOperation"
                    android:textColor="@color/white">

                </Button>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="10dp">

                <Button
                    android:id="@+id/cal_one"
                    android:layout_height="@dimen/maximum"
                    android:layout_marginRight="@dimen/standard"
                    android:layout_weight="1"
                    android:background="@color/purple"
                    android:text="@string/one"
                    android:onClick="numberClicked"
                    android:textColor="@color/white">

                </Button>


                <Button
                    android:id="@+id/cal_two"
                    android:layout_height="@dimen/maximum"
                    android:layout_marginRight="@dimen/standard"
                    android:layout_weight="1"
                    android:background="@color/purple"
                    android:text="@string/two"
                    android:onClick="numberClicked"
                    android:textColor="@color/white">

                </Button>


                <Button
                    android:id="@+id/cal_three"
                    android:layout_height="@dimen/maximum"
                    android:layout_marginRight="@dimen/standard"
                    android:layout_weight="1"
                    android:background="@color/purple"
                    android:text="@string/three"
                    android:onClick="numberClicked"
                    android:textColor="@color/white">

                </Button>


                <Button
                    android:id="@+id/cal_plus"
                    android:layout_height="@dimen/maximum"
                    android:layout_weight="1"
                    android:background="@color/orange"
                    android:text="@string/plus"
                    android:onClick="signOperation"
                    android:textColor="@color/white">

                </Button>
            </TableRow>
        </TableLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="394dp"
        android:layout_height="68dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">


        <Button
            android:id="@+id/cal_zero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@color/purple"
            android:text="@string/zero"
            android:onClick="numberClicked"
            android:textColor="@color/white">

        </Button>

        <Button
            android:id="@+id/cal_full.stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/standard"
            android:background="@color/purple"
            android:text="@string/full_stop"
            android:onClick="numberClicked"
            android:textColor="@color/white">

        </Button>

        <Button
            android:id="@+id/cal_ans"
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:background="@color/orange"
            android:text="@string/equals"
            android:onClick="equalTo"
            android:textColor="@color/white">

        </Button>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>