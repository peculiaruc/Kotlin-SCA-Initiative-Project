<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.scainitiative.kotlinscainitiativeproject.view.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >

        <action
            android:id="@+id/actionAddNote"
            app:destination="@id/addNoteFragment" />
    </fragment>
    <fragment
        android:id="@+id/addNoteFragment"
        android:name="com.scainitiative.kotlinscainitiativeproject.view.addNote.AddNoteFragment"
        android:label="fragment_add"
        tools:layout="@layout/fragment_add" >
        <action
            android:id="@+id/actionSaveNote"
            app:destination="@id/homeFragment" />
        <argument
            app:argType="com.scainitiative.kotlinscainitiativeproject.model.Note"
            android:name="Note" />
    </fragment>
</navigation>